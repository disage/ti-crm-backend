datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:mysecretpassword@localhost:5432/postgres"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  role         String   @default("user") // admin / user
  createdAt    DateTime @default(now())
  refreshToken String?
  // name String
}
